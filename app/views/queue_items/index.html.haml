%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
          = form_tag my_queue_path, method: :patch, id: 'queue_items_form' do
            - @queue_items.each do |queue_item|
              %tr
                %td
                  = text_field_tag "queue_ids_with_positions[#{queue_item.id}]", queue_item.position, class: 'form-control', form: 'queue_items_form'
                %td
                  = link_to queue_item.video_title, video_path(queue_item.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = select_tags_for_ratings(queue_item, 'queue_items_form')
                %td
                  = link_to queue_item.category_name, category_path(queue_item.category)
                %td
                  = link_to queue_item_path(queue_item), method: :delete do
                    %i.glyphicon.glyphicon-remove
        - if @queue_items.any?
          = submit_tag "Update Instant Queue", class: "btn btn-default", form: 'queue_items_form'
