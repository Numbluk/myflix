%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = form_for [:admin, @video], class: 'form-horizontal' do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              = f.label :title, class: 'control-label, col-sm-3'
              = f.text_field :title

            .form-group
              = f.label :category_id, class: 'control-label, col-sm-3'
              = f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] } )

            .form-group
              = f.label :description, class: 'control-label, col-sm-3'
              = f.text_area :description

            .form-group.clearfix
              = f.label :large_cover
              = f.file_field :large_cover, class: 'btn btn-file'
            .form-group.clearfix
              = f.label :small_cover
              = f.file_field :small_cover, class: 'btn btn-file'
            .form-group.clearfix
              = f.label :video_url
              = f.text_field :video_url

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
