%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation do |f|
        %header
          %h1 invite a friend to join myflix!
        %fieldset
          .form-group
            = f.label :recipient_email, "Friend's Email"
            .row
              .col-sm-4
                = f.email_field :recipient_email
          .form-group
            = f.label :recipient_name, "Friend's Name"
            .row
              .col-sm-4
                = f.text_field :recipient_name
          .form-group
            = f.label :message
            .row
              .col-sm-6
                = f.text_area :message
        %fieldset.form-group.action
          = f.submit 'Send Invitation', class: 'btn btn-default'
